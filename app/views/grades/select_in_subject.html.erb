<div class="content-view">
  <h1>Seleccione la Materia</h1>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <%= form_tag(show_index_grades_path, method: :get) do %>
              <div class="form-group">
                <%= label_tag 'subject_id', 'Materia:', class: "form-label" %>
                <%= select_tag 'subject_id', options_from_collection_for_select(@subjects, 'id', 'name'), include_blank: 'Seleccione una materia', class: "form-control" %>
                <%= hidden_field_tag 'course_id', @course.id %>
              </div>
              <%= submit_tag 'Continuar', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>