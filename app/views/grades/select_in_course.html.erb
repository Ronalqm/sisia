<div class="content-view">
  <h1>Seleccione un Curso</h1>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <%= form_tag(select_in_subject_grades_path, method: :get) do %>
              <div class="form-group">
                <%= label_tag 'course_id', 'Curso:', class: "form-label" %>
                <%= select_tag 'course_id', options_for_select(@courses.map { |course| [course.name, course.id] }), include_blank: 'Seleccione un curso', class: "form-control" %>
              </div>

              <%= submit_tag 'Continuar', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>