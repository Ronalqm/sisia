<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :Correo_electronico, class: "col-sm-2 col-form-label text-sm-right" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" , class: "col-sm-2 col-form-label text-sm-right" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 col-form-label text-sm-right" %>
    <div class="col-sm-10">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password", class: "col-sm-2 col-form-label text-sm-right" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :Confirmar_password, class: "col-sm-2 col-form-label text-sm-right" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" , class: "col-sm-2 col-form-label text-sm-right"%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Registrarse", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
