<div class="register">
  <div class="modal-body modal-dialog modal-register">
    <div class="container col-lg-11">
      <br><br>
      <div class="modal-content col-lg-9">
        <div id="error-messages" style="display: none;">
          <% if resource.errors.any? %>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form text-center" }) do |f| %>
          <%= image_tag("icon-session.png", alt: "Ícono", width: "150", height: "150", style: "border-radius: 0;") %>
          <h3 class="title-login">Registrar Cuenta</h3>
          <div class="form-group">
            <%= f.label :Correo_electronico, class: "col-sm-2 col-form-label text-sm-right" %>
            <div >
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" , class: "col-sm-2 col-form-label text-sm-right input-login" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :Contraseña, class: "col-sm-2 col-form-label text-sm-right" %>
            <div>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em>
              <% end %><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password", class: "col-sm-2 col-form-label text-sm-right input-login" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :Confirmar_Contraseña, class: "col-sm-2 col-form-label text-sm-right" %>
            <div>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" , class: "col-sm-2 col-form-label text-sm-right input-login"%>
            </div>
          </div>
          <br>
          <div class="form-actions login-button">
            <%= f.submit "Registrarse", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
