<h2>Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", class: "col-sm-2 col-form-label text-sm-right" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password", class: "col-sm-2 col-form-label text-sm-right" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :Recuerdame, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
