<div class="login">
  
  <div class=" modal-body modal-dialog">
    <div class="container col-lg-11">
              
              <br><br>
              <div class="modal-content col-lg-9">         
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form text-center" }) do |f| %>
                  <%= image_tag("icon-session.png", alt: "Ícono", width: "150", height: "150", style: "border-radius: 0;") %>
                      <h3 class="title-login">Iniciar sesión</h3>
                      <div class="form-group">
                        <%= f.label :Correo, class: "col-sm-2 col-form-label text-sm-right" %><br />
                        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", class: "col-sm-2 col-form-label text-sm-right input-login" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :Contraseña, class: "col-sm-2 col-form-label text-sm-right" %><br />
                        <%= f.password_field :password, class: "form-control", autocomplete: "current-password", class: "col-sm-2 col-form-label text-sm-right input-login" %>
                      </div>
                      <% if devise_mapping.rememberable? %>
                        <div class="form-group">
                          <%= f.check_box :remember_me, class: "form-check-input" %>
                          <%= f.label :Recuerdame, class: "form-check-label" %>
                        </div>
                      <% end %>
                      <div class="form-actions login-button">
                        <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
                      </div>
                    <% end %>

                  <%= render "devise/shared/links" %>
                    <br>
              </div>
          </div>
          
  </div>
</div>


  

  

  

  





    