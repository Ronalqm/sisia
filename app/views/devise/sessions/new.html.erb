<div class="login">
  
  <div class=" modal-body modal-dialog">
    <div class=" container col-lg-11">
              
              <br><br>
              <div class="modal-content col-lg-9">         
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form text-center" }) do |f| %>
                      <img src="https://w0.peakpx.com/wallpaper/753/644/HD-wallpaper-perfil-cool-tecnologia-thumbnail.jpg" width="150px" height="150px"> 
                      <h3>Iniciar sesión</h3>
                      <div class="form-group">
                        <%= f.label :Correo %><br />
                        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", class: "col-sm-2 col-form-label text-sm-right" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :password %><br />
                        <%= f.password_field :password, class: "form-control", autocomplete: "current-password", class: "col-sm-2 col-form-label text-sm-right" %>
                      </div>
                      <% if devise_mapping.rememberable? %>
                        <div class="form-group">
                          <%= f.check_box :remember_me, class: "form-check-input" %>
                          <%= f.label :Recuerdame, class: "form-check-label" %>
                        </div>
                      <% end %>
                      <div class="form-actions">
                        <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
                      </div>
                    <% end %>

                  <%= render "devise/shared/links" %>
                    </form><br>
              </div>
          </div>
          
  </div>
</div>


  

  

  

  





    