<%= form_with(model: @course, local: true) do |form| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, 'error') %> prohibieron que este curso sea guardado:</h2>

      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field mb-3">
    <%= form.label :number_of_subjects %>
    <%= form.number_field :number_of_subjects %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar Curso', class: 'btn btn-primary' %>
  </div>
<% end %>
