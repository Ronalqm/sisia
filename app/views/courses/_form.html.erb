<%= form_with(model: @course, local: true) do |form| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, 'error') %> prohibieron que este curso sea guardado:</h2>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div class="form-group mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :number_of_subjects, class: "form-label" %>
              <%= form.number_field :number_of_subjects, class: "form-control" %>
            </div>

            <div class="actions d-grid gap-2 d-md-block">
              <%= form.submit 'Guardar Curso', class: 'btn btn-success', style: 'width: 150px;' %>
              <%= link_to 'Volver', courses_path, class: 'btn btn-secondary', style: 'width: 150px;' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
