<div class="content-view" >
  <h1 class="mb-4" style="color: black;"><%= @student.first_name %> <%= @student.last_name %></h1>

  <div class="row letter-black" >
    <div class="col-md-6 letter-black">
      <h3>Información del Estudiante</h3>
      <p class="letter-black"><strong>Nombre:</strong> <%= @student.first_name %> <%= @student.last_name %></p>
      <p class="letter-black"><strong>Correo Electrónico:</strong> <%= @student.email %></p>
      <p class="letter-black"><strong>Número de Identificación:</strong> <%= @student.identification_number %></p>
      <p class="letter-black"><strong>Género:</strong> <%= @student.gender %></p>
      <p class="letter-black"><strong>Fecha de Nacimiento:</strong> <%= @student.date_of_birth %></p>
      <p class="letter-black"><strong>Dirección:</strong> <%= @student.address %></p>
      <p class="letter-black"><strong>Estado:</strong> <%= @student.status %></p>
    </div>
    <div class="col-md-6">
      <h3>Código QR</h3>
      <%= image_tag generate_qr_code_student_path(@student), alt: "Código QR del Estudiante" %>
      <%= link_to 'Resumen del Estudiante', summary_student_path(@student), class: 'btn btn-primary mt-3' %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Editar', edit_student_path(@student), class: 'btn btn-warning' %>
    <%= link_to 'Volver', students_path, class: 'btn btn-secondary' %>
  </div>
</div>

