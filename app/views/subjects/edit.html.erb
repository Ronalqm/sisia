<h1>Editar Materia</h1>

<%= form_for @subject do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :course_id, 'Curso' %>
    <%= f.collection_select(:course_id, Course.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :teacher_id, 'Docente' %>
    <%= f.collection_select(:teacher_id, Teacher.all, :id, :full_name) %>
  </div>

  <div class="actions">
    <%= f.submit 'Actualizar', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Cancelar', subjects_path, class: 'btn btn-secondary' %>
