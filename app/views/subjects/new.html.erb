<div class="content-view">
  <h1>Nueva Materia</h1>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <%= form_for @subject do |f| %>
              <div class="form-group">
                <%= f.label :name, class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :course_id, 'Curso', class: "form-label" %>
                <%= f.collection_select(:course_id, Course.all, :id, :name, { prompt: "Seleccionar curso" }, class: "form-control") %>
              </div>

              <div class="form-group">
                <%= f.label :teacher_id, 'Docente', class: "form-label" %>
                <%= f.collection_select(:teacher_id, Teacher.all, :id, :full_name, { prompt: "Seleccionar docente" }, class: "form-control") %>
              </div>
              <br>
              <div class="actions">
                <%= f.submit 'Guardar', class: 'btn btn-primary' %>
                <%= link_to 'Volver a la lista de materias', subjects_path, class: 'btn btn-secondary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>