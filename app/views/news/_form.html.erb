<%= form_for @news do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>
  
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 10, cols: 40 %>
    </div>
  
    <div class="actions">
      <%= f.submit 'Guardar' %>
    </div>
  <% end %>
  