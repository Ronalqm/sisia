<%= form_for @news do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div class="form-group" style="margin-top: 15px;">
              <strong><%= f.label :Titulo, class: "form-label" %></strong>
              <%= f.text_field :title, class: "form-control" %>
            </div>
          
            <div class="form-group" style="margin-top: 15px;">
              <strong><%= f.label :Fecha, class: "form-label" %></strong>
              <%= f.date_field :date, class: "form-control" %>
            </div>
          
            <div class="form-group" style="margin-top: 15px;" >
              <strong><%= f.label :Contenido, class: "form-label" %></strong>
              <%= f.text_area :content, rows: 10, cols: 40, class: "form-control" %>
            </div>
          
            <div class="actions d-grid gap-2 d-md-block" style="margin-top: 15px;">
              <%= f.submit 'Guardar', class: 'btn btn-success' %>
              <%= link_to 'Volver', news_index_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
