<div class="content-view">
  <div class="card" style="width: 30rem; margin-bottom: 10px;">
    <div class="card-body">
      <h4 class="card-title"><%= @news.title %></h4>
      <h5 class="card-subtitle mb-2 text-muted"><%= @news.date.strftime('%d/%m/%Y') %></h5>

      <p class="card-text" style="color: black;">Contenido: <%= @news.content %></p>
    </div>
  </div>

  <div class="d-grid gap-2 d-md-block">
    <%= link_to 'Volver ', news_index_path, class: 'btn btn-secondary'%>
    <%= link_to 'Editar', edit_news_path(@news), class: 'btn btn-warning' %>
    <%= link_to 'Eliminar', @news, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger'%>

  </div>
</div>


