<!-- app/views/attendances/select_subject.html.erb -->
<h1>Seleccione una Materia</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_tag(show_attendances_path, method: :get) do %>
            <div class="form-group">
              <%= label_tag 'subject_id', 'Materia:' %>
              <%= select_tag 'subject_id', options_for_select(@subjects.map { |subject| [subject.name, subject.id] }), include_blank: 'Seleccione una materia', class: 'form-control' %>
            </div>
            <%= hidden_field_tag 'course_id', params[:course_id] %>
            <%= submit_tag 'Continuar', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
