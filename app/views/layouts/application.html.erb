<!DOCTYPE html>
<html>
  <head>
    <title>Sisia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  </head>

  <body>

    <div class="dashboard">
    <aside class="sidebar bg-dark text-light">
      <div class="logo">
        <h1>Tu Sistema Académico</h1>
      </div>
      <nav>
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to root_path do %>
              <span class="material-symbols-outlined">home</span> Inicio
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to students_path do %>
              <span class="material-symbols-outlined">person</span> Estudiantes
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to teachers_path do %>
              <span class="material-symbols-outlined">group</span> Profesores
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to courses_path do %>
              <span class="material-symbols-outlined">school</span> Cursos
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to subjects_path do %>
              <span class="material-symbols-outlined">list</span> Materias
            <% end %>
          </li>
          <li class="nav-item text-light">
            <%= link_to news_index_path do %>
              <span class="material-symbols-outlined">news</span> Noticias
            <% end %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="material-symbols-outlined">task</span> Calificaciones
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="<%= select_in_course_grades_path %>">
                <i class="bi bi-award"></i> Listado de calificaciones
              </a>
              <a class="dropdown-item" href="<%= select_course_grades_path %>">
                <i class="bi bi-journal-plus"></i> Nueva calificación
              </a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="material-symbols-outlined">checklist</span></i> Asistencias
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="<%= select_course_attendances_path %>">
                <i class="bi bi-calendar-check"></i> Listado de asistencias
              </a>
              <a class="dropdown-item" href="<%= new_select_course_attendance_path %>">
                <i class="bi bi-calendar-plus"></i> Nueva Asistencia
              </a>
            </div>
          </li>
          </ul>
        </nav>

        <div>
          <% if user_signed_in? %>
            <!-- Enlace para cerrar sesión -->
            <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
          <% else %>
            <!-- Enlace para iniciar sesión -->
            <%= link_to 'Iniciar sesión', new_user_session_path, class: 'btn btn-primary'%>
            <br><br>
            <!-- Enlace para registrar nuevo usuario -->
            <%= link_to 'Registrar', new_user_registration_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </aside>

      
      
      <main class="content">
        <%= yield %>
      </main>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
